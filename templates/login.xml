<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">

	<div class = "informationBg_login">
		<div class = "informationMessage_login"> ds</div>
	</div>
	<div class = "allLogin">
		<div class="button__top">
				<p class="logo"> NotPvPTowerDefence </p>
		</div>
		<p class="hend">
				LOGIN
		</p>
		<form method="POST" action="/api/v1/auth/signup" class="login_form">
			<div class="cusInput">
				<label class="label label__login">
					Login
				</label>
				<input class="input login" type="text" name="login" value=""></input>
			</div>
			<div class="cusInput">
				<label class="label label__email">
					E-mail
				</label>
				<!--<input  class="input" type="email" name="email" required="" value=""></input>-->
				<input class="input email" type="text" name="email" value=""></input>
			</div>
			<div class="cusInput">
				<label class="label label__password">
					Password
				</label>
				<!--<input class="input" type="password" name="password" required="" value=""></input>-->
				<input class="input password" type="password" name="password" value=""></input>
			</div>
			<div class="cusInput">
				<input class="input buts" type="submit" value="Submit" disabled = "true"></input>
			</div>
			<div class="js-back backButton">
				<a href="#" class="textButton">&#9668; Back</a>
			</div>
		</form>
	</div>
</fest:template>